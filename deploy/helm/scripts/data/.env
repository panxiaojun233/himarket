# Kubernetes 命名空间
NAMESPACE=himarket-system

# 仅部署 Himarket（设置为 true 时只部署 Himarket，跳过 Nacos、Higress 及所有钩子）
HIMARKET_ONLY=false

# Helm 仓库配置
HIGRESS_REPO_NAME=higress.io
HIGRESS_REPO_URL=https://higress.cn/helm-charts
HIGRESS_CHART_REF=higress.io/higress

NACOS_REPO_NAME=ygqygq2
NACOS_REPO_URL=https://ygqygq2.github.io/charts/
NACOS_CHART_REF=ygqygq2/nacos

# Himarket 镜像配置
HIMARKET_HUB=opensource-registry.cn-hangzhou.cr.aliyuncs.com/higress-group
HIMARKET_IMAGE_TAG=latest
HIMARKET_MYSQL_IMAGE_TAG=latest

# MySQL 数据库配置
# 是否使用内置 MySQL（true/false）
HIMARKET_MYSQL_ENABLED=true

# 外部数据库配置（当 HIMARKET_MYSQL_ENABLED=false 时使用）
EXTERNAL_DB_HOST=Your_External_DB_Host
EXTERNAL_DB_PORT=3306
EXTERNAL_DB_NAME=Your_DB_Name
EXTERNAL_DB_USERNAME=Your_DB_Username
EXTERNAL_DB_PASSWORD=Your_DB_Password

# 商业化 Nacos 配置开关（设置为 true 时使用商业化 Nacos 实例，不部署开源 Nacos）
USE_COMMERCIAL_NACOS=false

# 商业化 Nacos 实例配置（当 USE_COMMERCIAL_NACOS=true 时必填）
COMMERCIAL_NACOS_NAME=
COMMERCIAL_NACOS_SERVER_URL=
# AKSK or username/password 选一组必填
COMMERCIAL_NACOS_USERNAME=
COMMERCIAL_NACOS_PASSWORD=
COMMERCIAL_NACOS_ACCESS_KEY=
COMMERCIAL_NACOS_SECRET_KEY=

# Nacos 镜像配置
NACOS_VERSION=v3.1.1
NACOS_IMAGE_REGISTRY=nacos-registry.cn-hangzhou.cr.aliyuncs.com
NACOS_IMAGE_REPOSITORY=nacos/nacos-server

# Nacos 管理员密码
NACOS_ADMIN_PASSWORD=nacos

# 默认的 Higress 登录密码
HIGRESS_USERNAME=admin
HIGRESS_PASSWORD=admin

# 后台默认用户名、密码
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# 前台默认用户名、密码
FRONT_USERNAME=demo
FRONT_PASSWORD=demo123
